extends layout.pug 

block content 
  div.container 
    h1 Create note 
    form.form(action="/create" method='POST') 
      label Title 
      input.input(type="text" name='title')

      label Author 
      input.input(type="text", name="author")

      label Description
      textarea.input( type="text" name="description" )   

      button.btn Create Note